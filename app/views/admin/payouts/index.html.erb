<h1 class="page-title">Seller Payouts</h1>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Seller</th>
        <th>Balance</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sellers.each do |seller| %>
        <tr>
          <td><%= seller.email %></td>
          <td><%= number_to_currency(seller.seller_balance.balance) %></td>
          <td>
            <%= link_to 'View', admin_payout_path(seller), class: 'btn btn-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  .page-title {
    text-align: center;
    margin-bottom: 20px;
  }

  .table-container {
    overflow-x: auto;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border: none; /* Remove border from the table */
  }

  .table th, .table td {
    text-align: center;
    padding: 10px;
    border: none; /* Remove border from table cells */
  }

  .table th {
    background-color: #000;
    color: #fff;
    font-weight: bold;
  }

  .table tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  .btn {
    display: inline-block;
    padding: 10px 15px;
    font-size: 14px;
    text-align: center;
    text-decoration: none;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: #fff;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  @media (max-width: 768px) {
    .table th, .table td {
      font-size: 12px;
      padding: 8px;
    }

    .btn {
      font-size: 12px;
      padding: 8px 10px;
    }
  }

  @media (max-width: 480px) {
    .table th, .table td {
      font-size: 10px;
      padding: 6px;
    }

    .btn {
      font-size: 10px;
      padding: 5px 8px;
    }
  }
</style>