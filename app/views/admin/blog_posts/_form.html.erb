<div style="max-width: 800px; margin: auto;">
<%= form_with model: @blog_post, url: admin_blog_posts_path, local: true, html: { multipart: true } do |form| %>
    <div>
      <%= form.label :author %>
      <%= form.text_field :author, required: true, class: "form-control" %>
    </div>
    
    <div>
      <%= form.label :title %>
      <%= form.text_field :title, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :content %>
      <%= form.text_area :content, rows: 10, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :cover_image %>
      <%= form.file_field :cover_image %>
    </div>

    <div>
      <%= form.label :content_images, "Additional Images" %>
      <%= form.file_field :content_images, multiple: true %>
    </div>

    <div>
      <%= form.label :published_date, "Publish Date" %>
      <%= form.date_field :published_date, required: true, class: "form-control" %>
    </div>


    <div>
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

