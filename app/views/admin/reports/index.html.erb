<h1 class="page-title">Business Performance Report</h1>

<div class="report-container">
  <div class="report-item">
    <h3>Total Orders</h3>
    <p><%= @total_orders %></p>
  </div>
  <div class="report-item">
    <h3>Total Revenue</h3>
    <p><%= number_to_currency(@total_revenue) %></p>
  </div>
  <div class="report-item">
    <h3>Total Customers</h3>
    <p><%= @total_customers %></p>
  </div>
  <div class="report-item">
    <h3>Orders by Status</h3>
    <ul>
      <% @orders_by_status.each do |status, count| %>
        <li><%= status.humanize %>: <%= count %></li>
      <% end %>
    </ul>
  </div>
  <div class="report-item">
    <h3>Orders by Date</h3>
    <ul>
      <% @orders_by_date.each do |date, count| %>
        <li><%= date %>: <%= count %></li>
      <% end %>
    </ul>
  </div>
</div>

<style>
  .page-title {
    text-align: center;
    margin-bottom: 20px;
  }

  .report-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  .report-item {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 10px;
    flex: 1 1 30%;
    max-width: 30%;
    text-align: center;
  }

  .report-item h3 {
    margin-bottom: 10px;
  }

  .report-item p, .report-item ul {
    margin: 0;
  }

  .report-item ul {
    list-style: none;
    padding: 0;
  }

  .report-item ul li {
    margin-bottom: 5px;
  }

  @media (max-width: 768px) {
    .report-item {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>