<h1 class="page-title">Category Shipping Fees</h1>

<div class="actions">
  <%= link_to 'New Category Shipping Fee', new_admin_category_shipping_fee_path, class: 'btn btn-primary' %>
</div>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Category</th>
        <th>Fee</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @category_shipping_fees.each do |fee| %>
        <tr>
          <td><%= fee.category %></td>
          <td><%= number_to_currency(fee.fee) %></td>
          <td class="buttons-actions">
            <%= link_to 'Edit', edit_admin_category_shipping_fee_path(fee), class: 'btn btn-secondary btn-sm' %>
            <%= button_to 'Delete', admin_category_shipping_fee_path(fee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

