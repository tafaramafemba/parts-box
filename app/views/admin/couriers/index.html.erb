<h1 class="page-title">Couriers</h1>

<div class="actions">
  <%= link_to 'New Courier', new_admin_courier_path, class: 'btn btn-primary' %>
</div>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @couriers.each do |courier| %>
        <tr>
          <td><%= courier.name %></td>
          <td><%= courier.email %></td>
          <td><%= courier.phone_number %></td>
          <td>
            <div class="buttons-actions">
              <%= link_to 'Edit', edit_admin_courier_path(courier), class: 'btn btn-secondary btn-sm' %>
              <%= button_to 'Delete', admin_courier_path(courier), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  .page-title {
    text-align: center;
    margin-bottom: 20px;
  }

  .buttons-actions {
    display: flex;
    flex-direction: row;
    gap: 10px;
    justify-content: center;
  }

  .actions {
    text-align: center;
    margin-bottom: 20px;
  }

  .btn {
    display: inline-block;
    padding: 10px 15px;
    font-size: 14px;
    text-align: center;
    text-decoration: none;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn-primary {
    background-color: #007bff;
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: #fff;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .btn-danger {
    background-color: #dc3545;
    color: #fff;
  }

  .btn-danger:hover {
    background-color: #c82333;
  }

  .table-container {
    overflow-x: auto;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  }

  .table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border: none; /* Remove border from the table */
  }

  .table th, .table td {
    text-align: center;
    padding: 10px;
    border: none; /* Remove border from table cells */
  }

  .table th {
    background-color: #000;
    color: #fff;
    font-weight: bold;
  }

  .table tr:nth-child(even) {
    background-color: #f2f2f2;
  }
</style>