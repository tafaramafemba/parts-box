<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <style>
    /* General Reset */
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* Layout Styles */
    .admin-layout {
      display: flex;
      min-height: 100vh;
      background: #f4f4f4;
    }

    .sidebar {
      width: 250px;
      background: #333;
      color: #fff;
      padding: 20px;
      box-sizing: border-box;
    }

    .sidebar h2 {
      margin-top: 0;
      font-size: 1.5em;
    }

    .sidebar a {
      display: block;
      color: #20C997;
      text-decoration: none;
      margin: 10px 0;
      padding: 10px;
      border-radius: 5px;
    }

    .sidebar a:hover {
      background: #444;
    }

    .content {
      flex: 1;
      padding: 20px;
      box-sizing: border-box;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .admin-layout {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
      }

      .content {
        padding: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="admin-layout">
    <div class="sidebar">
      <h2>Admin Dashboard</h2>
      <a href="<%= admin_blog_posts_path %>">Manage Blog Posts</a>
      <a href="<%= edit_admin_registration_path %>">Change Password</a>
      <a href="<%= admin_delivery_slots_path %>">Manage Delivery Slots</a>
      <a href="<%= admin_orders_path %>">Manage Orders</a>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
