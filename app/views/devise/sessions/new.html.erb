<%= stylesheet_link_tag "registration-forms", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>



<div class="form-sign-details">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
    </div>

    <div class="sign-container">
      <%= f.submit "Log in", class: 'form-submit' %>
   
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'form-link' %>
    </div>

      <% if devise_mapping.rememberable? %>
      <div class="remember-div">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'form-label' %>
      </div>
    <% end %>

      <span>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'form-link', data: { turbo: false } %></span>

  <% end %>

</div>


