<h1 class="page-title">Platform Fee Configuration</h1>

<div class="actions">
  <%= link_to 'Edit Platform Fee', edit_admin_platform_fee_path(@platform_fee), class: 'btn btn-primary' %>
</div>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Percentage</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= number_to_percentage(@platform_fee.percentage * 100, precision: 2) %></td>
        <td>
          <%= link_to 'Edit', edit_admin_platform_fee_path(@platform_fee), class: 'btn btn-secondary btn-sm' %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

